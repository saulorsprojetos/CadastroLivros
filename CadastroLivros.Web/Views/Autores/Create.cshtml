@model CadastroLivros.Domain.Entities.Autor
<div class="container mt-4">
    <h4>Novo Autor(a)</h4>

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
    {
        <div class="alert alert-danger alert-dismissible fade show auto-dismiss mt-3" role="alert">
            <strong>Atenção:</strong> Verifique as informações e tente novamente!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" class="mt-3">
        <div class="row">
            <div class="mb-3 col-md-5">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span id="nome-error" asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Salvar</button>
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
