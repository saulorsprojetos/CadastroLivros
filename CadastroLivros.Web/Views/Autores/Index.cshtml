@model CadastroLivros.Web.ViewModels.PaginacaoVm<CadastroLivros.Domain.Entities.Autor>

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h4 class="mb-1 fw-bold">Autores</h4>
            <div class="text-muted small">
                Cadastre e mantenha os autores dos livros.
            </div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
            <a class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-lg"></i> Novo
            </a>
        </div>
    </div>        

    @if (TempData["msg"] != null)
    {        
        <div class="alert alert-success alert-dismissible fade show auto-dismiss" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show auto-dismiss" role="alert">
            @TempData["erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <div class="row g-3 align-items-end mb-3">
                <div class="col-md-7">
                    <form method="get" class="d-flex gap-2">
                        <div class="flex-grow-1">
                            <label class="form-label small text-muted mb-1">Buscar</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                                <input class="form-control" name="q" value="@Model.Query" placeholder="Ex: Machado de Assis, Clarice Lispector ..." />
                            </div>
                        </div>

                        <div class="d-flex align-items-end gap-2">
                            <button class="btn btn-outline-primary" type="submit">Filtrar</button>
                            <a class="btn btn-outline-secondary" asp-action="Index">Limpar</a>
                        </div>
                    </form>
                </div>

                <div class="col-md-5 text-md-end">
                    <div class="small text-muted">
                        @if (Model.ContagemTotal == 0)
                        {
                            <span>Nenhum registro encontrado.</span>
                        }
                        else
                        {
                            <span>Mostrando <strong>@Model.From</strong>–<strong>@Model.To</strong> de <strong>@Model.ContagemTotal</strong></span>
                            <span class="ms-2 badge text-bg-light border">6 por página</span>
                        }
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th class="text-end" style="width:220px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Count == 0)
                        {
                            <tr>
                                <td colspan="2" class="py-4 text-center text-muted">
                                    <i class="bi bi-inbox fs-3 d-block mb-1"></i>
                                    Nenhum autor(a) cadastrado(a).
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var f in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@f.Nome</div>
                                        <div class="text-muted small">ID: @f.CodAu</div>
                                    </td>
                                    <td class="text-end">
                                        <div class="d-inline-flex gap-2">
                                            <a class="btn btn-outline-primary btn-compact"
                                               asp-action="Edit" asp-route-id="@f.CodAu">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>
                                            <a class="btn btn-sm btn-outline-danger px-1 ms-1"
                                               asp-action="Delete" asp-route-id="@f.CodAu">
                                                <i class="bi bi-trash"></i> Excluir
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.ContagemTotal > 0 && Model.TotalPaginas > 1)
            {
                <nav class="mt-3">
                    <ul class="pagination justify-content-center mb-0">

                        <li class="page-item @(Model.HasPrev ? "" : "disabled")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pagina="@(Model.Pagina - 1)"
                               asp-route-q="@Model.Query">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>

                        @{
                            var start = Math.Max(1, Model.Pagina - 3);
                            var end = Math.Min(Model.TotalPaginas, start + 6);
                            start = Math.Max(1, end - 6);
                        }

                        @for (int p = start; p <= end; p++)
                        {
                            <li class="page-item @(p == Model.Pagina ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-pagina="@p"
                                   asp-route-q="@Model.Query">@p</a>
                            </li>
                        }

                        <li class="page-item @(Model.HasNext ? "" : "disabled")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pagina="@(Model.Pagina + 1)"
                               asp-route-q="@Model.Query">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>

                    </ul>
                </nav>
            }
        </div>
    </div>
</div>
