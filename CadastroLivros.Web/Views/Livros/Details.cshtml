@model CadastroLivros.Domain.Entities.Livro

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h4 class="mb-1 fw-bold">Detalhes do Livro</h4>
            <div class="text-muted small">
                Visualização completa das informações cadastradas.
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-4">

            <!-- Informações principais -->
            <div class="row g-3 mb-4">

                <div class="col-md-6">
                    <div class="text-muted small">Título</div>
                    <div class="fw-semibold">@Model.Titulo</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Editora</div>
                    <div class="fw-semibold">@Model.Editora</div>
                </div>

                <div class="col-md-3">
                    <div class="text-muted small">Edição</div>
                    <div class="fw-semibold">@Model.Edicao</div>
                </div>

                <div class="col-md-3">
                    <div class="text-muted small">Ano de Publicação</div>
                    <div class="fw-semibold">@Model.AnoPublicacao</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Autores</div>
                    <div>
                        @foreach (var a in Model.Autores.Select(x => x.Autor.Nome))
                        {
                            <span class="badge text-bg-light border me-1 mb-1">@a</span>
                        }
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Assuntos</div>
                    <div>
                        @foreach (var s in Model.Assuntos.Select(x => x.Assunto.Descricao))
                        {
                            <span class="badge text-bg-light border me-1 mb-1">@s</span>
                        }
                    </div>
                </div>

            </div>

            <hr />

            <!-- Preços -->
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-2">
                <h5 class="mb-0 fw-bold">Preços por Forma de Compra</h5>
                <span class="badge text-bg-light border">Valores em R$</span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Forma</th>
                            <th class="text-end" style="width:200px;">Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Precos.Any())
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted py-3">
                                    Nenhum preço cadastrado.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var p in Model.Precos.OrderBy(x => x.FormaCompra.Nome))
                            {
                                <tr>
                                    <td class="fw-semibold">@p.FormaCompra.Nome</td>
                                    <td class="text-end">
                                        @p.Valor.ToString("C")
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <hr class="my-4" />

            <!-- Ações -->
            <div class="d-flex justify-content-end gap-2">
                <a class="btn btn-outline-primary"
                   asp-action="Edit" asp-route-id="@Model.Codl">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>

                <a class="btn btn-outline-secondary"
                   asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>

        </div>
    </div>
</div>
